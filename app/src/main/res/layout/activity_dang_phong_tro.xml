<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_deital"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:text="Đăng phòng trọ"
                android:textColor="#fff"
                android:textSize="18sp" />
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Hình Ảnh"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1_dpt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:layout_margin="8dp"
                    android:text="Deital"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/img2_dpt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:text="Deital"
                    android:layout_margin="8dp"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/img3_dpt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:text="Deital"
                    android:layout_margin="8dp"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img4_dpt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:text="Deital"
                    android:layout_margin="8dp"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/img5_dpt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:text="Deital"
                    android:layout_margin="8dp"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/img6_dpt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:text="Deital"
                    android:layout_margin="8dp"
                    android:textSize="30sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_upload_image_dpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_gravity="center_horizontal"
            android:text="Tải lên"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Địa Chỉ"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_diachi_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:hint="So 2 , Nguyen Viet Xuan"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Xã/Phường"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_xaphuong_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:hint="Quang Trung"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Quận/Huyện"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_quanhuyen_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:hint="Ha Dong"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Giá"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_gia_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:hint="10000"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Số Người"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_songuoi_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:hint="2"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="SĐT"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_sodienthoai_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:hint="01657822457"
                    android:paddingLeft="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_post_dpt"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Post" />

                <Button
                    android:id="@+id/btn_cancle_dpt"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Cancle" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>