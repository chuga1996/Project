<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Hình Ảnh" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView
                android:id="@+id/img1_dpt"
                android:layout_width="320dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:textSize="30sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_upload_image_dpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Tải lên"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Địa Chỉ"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_diachi_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Xã/Phường"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_xaphuong_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Quận/Huyện"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <Spinner
                    android:id="@+id/spinner_quanhuyen_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Giá"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_gia_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="Số Người"
                    android:textColor="#818480"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_songuoi_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textColor="#818480"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="SĐT"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/edt_sodienthoai_dpt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/edt_diachi_dpt"
                    android:background="@drawable/duongvien_goctron"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_post_dpt"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Post" />

                <Button
                    android:id="@+id/btn_cancle_dpt"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Cancel" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>